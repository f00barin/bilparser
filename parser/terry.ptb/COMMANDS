## ORIGINAL DATASETS
# These were created by Terry Koo using Nivre's tool "penn2malt" to convert the WSJ PTB sections into dependencies using YM headrules
scp carreras@rosetta15.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.train.original  . 
scp carreras@rosetta15.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.val.original  . 
scp carreras@rosetta15.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.test.original  . 

## ADDITIONALLY, Koo trained pos-taggers by jacknifing, and annotated the training, validation and test sets
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.val.tagged40k.mapped . 
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.test.tagged40k.mapped . 
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.train40k.xtagged40k-10.original . 

## SOME OF THE FILES were only in the "mapped" form in the Koo directory, these are the maps from strings to numbers
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/words.map  . 
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ctags.map  . 
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ftags.map  . 
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/dependencies.map  . 

## MAP XTAGGED TRAIN SET
 cat ptb.train40k.xtagged40k-10.original | ../../ptools/scripts/map-data.pl - words.map - ctags.map ftags.map - -  dependencies.map > ptb.train40k.xtagged40k-10.mapped

## UNMAP TAGGED VAL AND TEST SETS
cat ptb.val.tagged40k.mapped |  ../../ptools/scripts/map-data.pl -u - words.map - ctags.map ftags.map  - - dependencies.map > ptb.val.tagged40k.original
cat ptb.test.tagged38k.mapped |  ../../ptools/scripts/map-data.pl -u - words.map - ctags.map ftags.map  - - dependencies.map > ptb.test.tagged40k.original

## CHECK THAT IF WE MAP AND UNMAP 
cat ptb.val.original | ../../ptools/scripts/col-pretty.pl > a
cat ptb.val.original | ../../ptools/scripts/map-data.pl - words.map - ctags.map ftags.map - - dependencies.map | ../../ptools/scripts/map-data.pl -u - words.map - ctags.map ftags.map - - dependencies.map | ../../ptools/scripts/col-pretty.pl | diff - a

## July 16, 2011, it turns out that the train.xtagged.original has the gold pos tags!!! redoing it
scp carreras@rosetta1.csail.mit.edu:/data/nlp1/maestro/dp/data/ptb/ptb.train40k.xtagged40k-10.mapped . 
cat ptb.train40k.xtagged40k-10.mapped | ../../ptools/scripts/map-data.pl -u - words.map - ctags.map ftags.map - - dependencies.map > ptb.train40k.xtagged40k-10.original
